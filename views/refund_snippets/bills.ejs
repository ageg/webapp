<fieldset name="bill<%= billNo %>">
	<legend>Facture #&nbsp;<%= billNo %></legend>
	<input type="hidden" class="form-control" id="bill_id" name="bill_id">
	<div class="form-group">
		<label for='supplier'>Fournisseur</label>
		<input class="form-control" type='text' name='supplier' required>
	</div>
	<div class="form-group">
		<label for='value'>Montant</label>
		<input class="form-control" type='number' name='value' step='0.01' required>
	</div>
	<div class="form-group">
		<label for='bill'>Facture</label>
		<p>TODO: UPLOAD ICI</p>
	</div>
	<div class="form-group">
		<label for='note'>Notes</label>
		<textarea class="form-control" name="note" placeholder="Notes sur la facture" rows="4"></textarea>
	</div>
</fieldset>